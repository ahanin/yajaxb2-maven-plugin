<?xml version="1.0" encoding="UTF-8"?>
<project>

  <build>
    <plugins>
      <plugin>
        <artifactId>jaxb2-maven-plugin</artifactId>
        <configuration>
          <encoding>ISO-8859-1</encoding>
          <packageName>jaxb2.plugin</packageName>
          <schemaDirectory>${basedir}/src/test/resources/testschemas</schemaDirectory>
          <schemaFiles>address4.xsd</schemaFiles>
          <bindingDirectory>${basedir}/src/main/xjb</bindingDirectory>
          <staleFile>${basedir}/target/test-generated-sources/iso88591/jaxb2/plugin/.staleFlag4-iso88591</staleFile>
          <outputDirectory>${basedir}/target/test-generated-sources/iso88591</outputDirectory>
          <project implementation="org.codehaus.mojo.jaxb2.BasicOptionsProjectStub"/>
        </configuration>
      </plugin>
    </plugins>
   </build>
</project>

